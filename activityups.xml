<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:gauge="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UPS">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="184dp"
        android:layout_height="62dp"

        android:layout_alignParentStart="true"


        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/p1" />

    <TextView
        android:id="@+id/UPSroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="73dp"
        android:text="    UPS Room"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="171dp"
        android:layout_height="188dp"

        android:layout_alignParentStart="true"


        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="113dp"
        android:layout_marginLeft="0dp"

        android:layout_marginTop="182dp"
        app:srcCompat="@drawable/b100" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="176dp"
        android:layout_marginLeft="176dp"
        android:layout_marginTop="378dp"
        android:text="100%"
        android:textSize="24sp" />

    <de.nitri.gauge.Gauge
        android:id="@+id/gauge3"

        android:layout_width="245dp"
        android:layout_height="239dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="78dp"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="458dp"
        gauge:initialValue="20"


        gauge:maxValue="70"
        gauge:minValue="20"
        gauge:totalNicks="120"
        gauge:valuePerNick="0.5"

        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="81dp"
        android:layout_marginLeft="81dp"
        android:layout_marginTop="424dp"
        android:text="        Temperature"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="232dp"
        android:layout_height="31dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginTop="141dp"
        android:text="       Battery"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/tempdanger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="633dp"
        android:layout_marginEnd="182dp"
        android:layout_marginRight="182dp"
        android:src="@drawable/danger"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/batDanger"
        android:layout_width="39dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:src="@drawable/battery"
        android:visibility="invisible" />

</RelativeLayout>